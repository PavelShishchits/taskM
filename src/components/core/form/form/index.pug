include ../input/index
include ../select/index
include ../textarea/index
include ../checkboxradio/index

form.form(method='post', action='/')
  .form__inner.form-row
    .form__col.col-md-6
      .form__item.control-group
        label.form__label(for='form_NAME') Name
        .form__input
          +input({
              id: 'form_NAME',
              name: 'form_NAME',
              type: 'text',
              required: true
          })
          .form__validation
    .form__col.col-md-6
      .form__item.control-group
        label.form__label(for='form_EMAIL') Email
        .form__input
          +input({
              id: 'form_EMAIL',
              name: 'form_EMAIL',
              type: 'email',
              required: true,
              placeholder: 'Enter email'
          })
          .form__validation
    .form__col.col-12.col-md-4
      .form__item.control-group
        label.form__label(for='form_CITIES') Select
        .form__input
          +select({
              id: 'form_CITIES',
              name: 'form_CITIES',
              required: true
          })
          .form__validation
    .form__col.col-12.col-md-4
      .form__item.control-group
        label.form__label(for='form_CITIES-2') Select with placeholder
        .form__input
          +select({
              id: 'form_CITIES-2',
              name: 'form_CITIES-2',
              required: true,
              placeholder: 'Choose option',
              list: [
                  {text: ''},
                  {text: 'Option 1'},
                  {text: 'Option 2', disabled: 'true'},
                  {text: 'Option 3 Option'}
              ]
          })
          .form__validation
    .form__col.col-12.col-md-4
      .form__item.control-group
        label.form__label(for='form_CITIES-3') Select with placeholder
        .form__input
          +select({
              id: 'form_CITIES-3',
              name: 'form_CITIES-3',
              required: true,
              multiple: 'multiple'
          })
          .form__validation
    .form__col.col-12
      .form__item.control-group
        label.form__label(for='form_MESSAGE') Your message
        .form__input
          +textarea({
              id: 'form_MESSAGE',
              name: 'form_MESSAGE'
          })
          .form__validation
    .form__col.col-12
      .form__item.control-group
        .form__input
          +checkboxradio({
              type: 'checkbox',
              id: 'form_CONFIRMATION',
              name: 'form_CONFIRMATION',
              text: 'Confirm your age is more then 18'
          })
    .form__col.col-12
      .form__item.control-group
        label.form__label(for='form_MALE') Select your male
        .form__input
          +checkboxradio({
              type: 'radio',
              id: 'form_MALE',
              name: 'form_MALE',
              text: 'Male'
          })
          +checkboxradio({
              type: 'radio',
              id: 'form_MALE-2',
              name: 'form_MALE',
              text: 'Female'
          })