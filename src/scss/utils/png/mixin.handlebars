{{#block "spritesheet"}}

@mixin png() {
    content: '';
    display: inline-block;
    background-image: url('{{{spritesheet.escaped_image}}}');
}
{{/block}}

{{#each sprites}}
@mixin png-{{name}}() {
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/each}}